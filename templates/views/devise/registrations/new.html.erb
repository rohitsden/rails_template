<div class="container">
  <div class="row">
    <div class="col-4"></div>
    <div class="col-4 text-center" style="margin-top:20%">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <%= image_tag "logo" , :class=>"mb-3"%>
        <label for="inputEmail" class="sr-only">Email address</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>"form-control", :placeholder=>"Email address" %>
        <%= f.password_field :password, autocomplete: "new-password", :class=>"form-control mt-1", :placeholder=>"Password" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class=>"form-control mt-1", :placeholder=>"Confirm Password" %>
        <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
        <%= f.submit "Sign up", :class=>"btn btn-primary btn-block mt-2 mb-1" %>
        <%= render "devise/shared/links" %>
        <p class="mt-3 mb-3 text-muted">&copy; 2020</p>
      <% end %>
    </div>
    <div class="col-4"></div>
  </div>
</div>